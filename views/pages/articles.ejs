<body>
  <section class="articles" style="padding-top: 40px">
    <div class="container">
      <div class="mb-4 mb-md-0">
        <div class="heading-section ftco-animate">
          <h2 class="mb-4">Software Enginering (SWE)</h2>
        </div>
      </div>
      <br>

      <div class="row ftco-animate">
        <div class="col-md-12">
          <div class="carousel-testimony owl-carousel ftco-owl">
            <% const monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]; %>
            <% if (blogItems && blogItems.length > 0) { %>
              <% cnt = 0; %>
              <% for (var i=0; i<blogItems.length; i++) { %>
                <% if (cnt < 3) { %>
                  <% if (blogCategories[i].indexOf("design") === -1) { %>
                  <% if (blogCategories[i].indexOf("software") !== -1) { %>
                    <% cnt++; %>
                    <div class="item">
                        <div class="testimony-wrap py-4">
                          <div class="text">
                            <div class="d-flex align-items-center">
                              <div class="blog-entry justify-content-end" style="width: 392px;height:578px;">
                                <a href="<%= blogItems[i].link %>" class="block-20" style="background-image: url('<%= blogItems[i].thumbnail %>');width:392px;height:263px;">
                                </a>
                                <div class="text p-4 float-right d-block">
                                  <div class="topper d-flex align-items-center">
                                    <div class="one py-2 pl-3 pr-1 align-self-stretch">
                                      <span class="day" style="color: white;font-weight:400;">
                                        <%= blogItems[i].pubDate.substring(8, 10) %>
                                        </span>
                                    </div>
                                    <div class="two pl-0 pr-3 py-2 align-self-stretch">
                                      <span class="yr" style="color: white;">
                                        <%= blogItems[i].pubDate.substring(0, 4) %>
                                        </span>
                                      <span class="mos" style="color: white;">
                                        <%= monthNames[new Date(blogItems[i].pubDate).getMonth()] %>
                                        </span>
                                    </div>
                                  </div>
                                  <h3><a href="<%= blogItems[i].link %>" style="color:black;text-align:center;font-weight:bold;font-size:19px;"><%= blogItems[i].title %></a></h3>
                                  <p class="article-text"><strong>Tags:</strong>
                                    <%= blogCategories[i] %>
                                    </p>
                                  <p><a href="<%= blogItems[i].link %>" style="font-weight:bold;text-decoration:underline;">Read more ></a></p>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% } %>
                  <% } %>
                <% } %>
              <% } %>
            <% } %>
              </div>
            </div>
          </div>
        </div>
      </section>

